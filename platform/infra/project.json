{
  "name": "@flex/platform-infra",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "platform/infra/src",
  "projectType": "application",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": { "lintFilePatterns": ["platform/infra/src/**/*.ts"] }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run platform/infra/src/ --passWithNoTests"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx --tsconfig tsconfig.base.json platform/infra/src/index.ts"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cdk deploy --app 'tsx --tsconfig tsconfig.base.json platform/infra/src/index.ts'"
      }
    },
    "synth": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/cdk.out/**"],
      "options": {
        "command": "cdk synth --app 'tsx --tsconfig tsconfig.base.json platform/infra/src/index.ts'"
      }
    },
    "checkov": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cdk synth --app 'tsx --tsconfig tsconfig.base.json platform/infra/src/index.ts' && checkov -f cdk.out --framework cloudformation",
        "cwd": "platform/infra"
      }
    }
  }
}
