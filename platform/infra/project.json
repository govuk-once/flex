{
  "name": "@flex/infra",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "platform/infra/src",
  "projectType": "application",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": { "lintFilePatterns": ["platform/infra/src/**/*.ts"] }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run platform/infra/src/ --passWithNoTests"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": { "command": "tsx platform/infra/src/index.ts" }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": { "command": "cdk deploy", "cwd": "platform/infra" }
    },
    "destroy": {
      "executor": "nx:run-commands",
      "options": { "command": "cdk destroy", "cwd": "platform/infra" }
    },
    "synth": {
      "executor": "nx:run-commands",
      "options": { "command": "cdk synth", "cwd": "platform/infra" }
    },
    "checkov": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cdk synth && checkov -f cdk.out --framework cloudformation",
        "cwd": "platform/infra"
      }
    }
  }
}
