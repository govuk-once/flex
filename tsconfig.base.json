{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@flex/source"],
    "paths": {
      "@flex/automation": ["automation/src/index.ts"],
      "@flex/my-plugin": ["tools/my-plugin/src/index.ts"],
      "@flex/packages": ["packages/src/index.ts"]
    }
  }
}
