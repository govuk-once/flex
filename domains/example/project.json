{
  "name": "@domains/example",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "domains/example/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx esbuild domains/example/src/handlers/*/**.ts --bundle --outdir=dist/domains/example --platform=node --minify=true --format=cjs"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["domains/example/src/**/*.ts"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run domains/example/src/"
      }
    }
  }
}
