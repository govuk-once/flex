{
  "name": "@domains/udp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "domains/udp/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx esbuild domains/udp/src/handlers/*/handler.ts --bundle --outdir=dist/domains/udp --platform=node --minify=true --format=cjs"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["domains/udp/src/**/*.ts"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run domains/udp/src/"
      }
    }
  }
}
