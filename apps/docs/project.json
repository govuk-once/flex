{
  "name": "@flex/docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["@flex/utils:generate-oas"],
      "defaultConfiguration": "scalar",
      "configurations": {
        "scalar": {
          "command": "http-server apps/docs -p 4200 -o/index.html -c-1"
        },
        "swagger": {
          "command": "http-server apps/docs -p 4200 -o/swagger.html -c-1"
        }
      }
    }
  }
}
