{
  "name": "@modules/udp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "modules/udp/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx esbuild modules/udp/lambdas/*/handler.ts --bundle --outdir=dist/modules/udp --platform=node --format=cjs"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["modules/udp/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "vitest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
