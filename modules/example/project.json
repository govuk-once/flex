{
  "name": "@modules/example",
  "sourceRoot": "modules/example/src",
  "projectType": "application",
  "implicitDependencies": ["utils"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "options": {
        "outputPath": "dist/modules/example",
        "main": "modules/example/src/index.ts",
        "tsConfig": "modules/example/tsconfig.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": { "lintFilePatterns": ["modules/example/**/*.ts"] }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": { "config": "vitest.config.ts", "passWithNoTests": true }
    }
  }
}
