{
  "type": "module",
  "scripts": {
    "test:all": "npx nx run-many --target=test",
    "test:affected": "npx nx affected --target=test",
    "build:all": "npx nx run-many --target=build",
    "build:affected": "npx nx affected --target=build",
    "build:project": "npx nx affected --target=build",
    "lint:all": "npx nx run-many --target=lint",
    "lint:affected": "npx nx affected --target=lint",
    "lint:project": "npx nx affected --target=lint",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "gen:lib": "npx nx g ./tools/generators:newSharedLib",
    "infra:build": "nx run infrastructure:build",
    "infra:build:watch": "nx run infrastructure:build:lambda:watch",
    "infra:deploy": "nx run infrastructure:deploy",
    "infra:deploy:hotswap": "nx run infrastructure:deploy:hotswap",
    "infra:synth": "nx run infrastructure:synth",
    "infra:diff": "nx run infrastructure:diff",
    "infra:destroy": "nx run infrastructure:destroy",
    "infra:test": "nx run infrastructure:test",
    "infra:synth:local": "nx run infrastructure:synth:local",
    "infra:local": "sam local start-api --template infrastructure/cdk.out/FlexApiStack.template.json --port 3000 --warm-containers EAGER",
    "infra:local:debug": "sam local start-api --template infrastructure/cdk.out/FlexApiStack.template.json --port 3000 --debug-port 5858 --warm-containers EAGER --debug"
  },
  "devDependencies": {
    "@nx/eslint": "22.2.0",
    "@nx/eslint-plugin": "22.2.0",
    "@types/aws-lambda": "8.10.159",
    "@types/node": "24.10.1",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@typescript-eslint/parser": "8.46.4",
    "@vitest/coverage-v8": "4.0.8",
    "aws-cdk": "^2.1033.0",
    "aws-cdk-lib": "^2.232.1",
    "constructs": "^10.4.4",
    "esbuild": "0.27.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "jiti": "2.4.2",
    "nx": "22.2.0",
    "prettier": "3.6.2",
    "source-map-support": "^0.5.21",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.8"
  },
  "dependencies": {
    "@middy/core": "6.4.5"
  }
}
